{
  "name": "payment-service",
  "version": "1.0.0",
  "description": "Backend service that integrates with PayFlex SDK",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest src/__tests__/integration.test.ts",
    "test:all": "jest && npm run test:integration",
    "setup": "npm install && npm run build",
    "demo:broken": "curl -X POST http://localhost:3000/api/transactions -H 'Content-Type: application/json' -d '{\"amount\": 5000, \"currency\": \"USD\", \"customerId\": \"demo_123\", \"paymentMethod\": \"card\", \"sendCustomerSummary\": true}'"
  },
  "dependencies": {
    "payflex-sdk": "^2.3.0",
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
} 